{
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.colorDecorators": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.emptySelectionClipboard": false,
  "editor.formatOnSave": true,
  "editor.fontFamily": "Bitstream Vera Sans Mono",
  "editor.fontSize": 13,
  "editor.hover.enabled": true,
  "editor.lightbulb.enabled": true,
  "editor.lineHeight": 0,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.occurrencesHighlight": true,
  "editor.overviewRulerBorder": false,
  "editor.rulers": [
    120
  ],
  "editor.selectionHighlight": true,
  // "editor.snippetSuggestions": "top",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  "emmet.includeLanguages": {
    "erb": "html"
  },
  "emmet.showSuggestionsAsSnippets": false,
  "emmet.triggerExpansionOnTab": true,
  "explorer.autoReveal": "focusNoScroll",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.associations": {
    "*.erb": "erb",
    "*.jb": "ruby"
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "peacock.affectActivityBar": false,
  "peacock.favoriteColors": [
    {
      "name": "Angular Red",
      "value": "#dd0531"
    },
    {
      "name": "Azure Blue",
      "value": "#007fff"
    },
    {
      "name": "JavaScript Yellow",
      "value": "#f9e64f"
    },
    {
      "name": "Mandalorian Blue",
      "value": "#1857a4"
    },
    {
      "name": "Node Green",
      "value": "#215732"
    },
    {
      "name": "React Blue",
      "value": "#61dafb"
    },
    {
      "name": "Something Different",
      "value": "#832561"
    },
    {
      "name": "Svelte Orange",
      "value": "#ff3d00"
    },
    {
      "name": "Vue Green",
      "value": "#42b883"
    }
  ],
  "prettier.documentSelectors": [
    "*.css"
  ],
  "ruby.lintDebounceTime": 1500,
  "ruby.specSaveFile": true,
  "search.actionsPosition": "auto",
  "search.exclude": {
    "**/assets/builds": true,
    "**/assets/fonts": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/vendor": true,
    "coverage": true,
    "log": true,
    "public": true,
    "spec/examples.txt": true,
    "spec/cassettes/**": true,
    "storage": true,
    "tmp": true
  },
  "search.mode": "reuseEditor",
  "search.useIgnoreFiles": false,
  "security.workspace.trust.untrustedFiles": "open",
  "standard.autoFixOnSave": true,
  "standard.enable": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.experimental.classRegex": [
    "class:\\s*\"([^\"]*)\""
  ],
  "tailwindCSS.includeLanguages": {
    "erb": "html",
    "ruby": "html"
  },
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 0,
  "vscode-erb-beautify.keepBlankLines": 1,
  "window.newWindowDimensions": "inherit",
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Spinel",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.wrapTabs": false,
  "workbench.iconTheme": "eq-material-theme-icons",
  "workbench.list.defaultFindMode": "filter",
  "workbench.sideBar.location": "right",
  "workbench.tips.enabled": false,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[ruby]": {
    "editor.defaultFormatter": "testdouble.vscode-standard-ruby",
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true
  },
  "[scss]": {
    "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
  },
  "rubyLsp.formatter": "none",
  "rubyLsp.rubyVersionManager": "asdf",
  "rubyLsp.enabledFeatures": {
    "codeActions": false,
    "diagnostics": false,
    "documentHighlights": true,
    "documentLink": true,
    "documentSymbols": true,
    "foldingRanges": true,
    "formatting": true,
    "hover": true,
    "inlayHint": true,
    "onTypeFormatting": true,
    "selectionRanges": true,
    "semanticHighlighting": true,
    "completion": true
  }
}
