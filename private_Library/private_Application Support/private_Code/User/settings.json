{
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.colorDecorators": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.emptySelectionClipboard": false,
  "editor.formatOnSave": true,
  "editor.fontFamily": "Bitstream Vera Sans Mono",
  "editor.fontSize": 13,
  "editor.hover.enabled": true,
  "editor.lightbulb.enabled": true,
  "editor.lineHeight": 0,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.occurrencesHighlight": true,
  "editor.overviewRulerBorder": false,
  "editor.rulers": [
    100
  ],
  "editor.selectionHighlight": true,
  // "editor.snippetSuggestions": "top",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  "emmet.includeLanguages": {
    "erb": "html"
  },
  "emmet.showSuggestionsAsSnippets": false,
  "emmet.triggerExpansionOnTab": true,
  "explorer.autoReveal": "focusNoScroll",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.associations": {
    "*.erb": "erb"
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "peacock.favoriteColors": [
    {
      "name": "Angular Red",
      "value": "#dd0531"
    },
    {
      "name": "Azure Blue",
      "value": "#007fff"
    },
    {
      "name": "JavaScript Yellow",
      "value": "#f9e64f"
    },
    {
      "name": "Mandalorian Blue",
      "value": "#1857a4"
    },
    {
      "name": "Node Green",
      "value": "#215732"
    },
    {
      "name": "React Blue",
      "value": "#61dafb"
    },
    {
      "name": "Something Different",
      "value": "#832561"
    },
    {
      "name": "Svelte Orange",
      "value": "#ff3d00"
    },
    {
      "name": "Vue Green",
      "value": "#42b883"
    }
  ],
  "peacock.affectActivityBar": false,
  "prettier.documentSelectors": [
    "*.css"
  ],
  "ruby.useLanguageServer": true,
  "ruby.lintDebounceTime": 1500,
  "ruby.useBundler": true,
  // "ruby.lint": {
  //   "standard": true,
  //   "rubocop": false
  // },
  // "ruby.format": "standard",
  "ruby.specSaveFile": true,
  "[ruby]": {
    "editor.defaultFormatter": "testdouble.vscode-standard-ruby"
  },
  "[scss]": {
    "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
  },
  "search.useIgnoreFiles": false,
  "search.exclude": {
    "**/assets/builds": true,
    "**/assets/fonts": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/vendor": true,
    "coverage": true,
    "log": true,
    "public": true,
    "spec/examples.txt": true,
    "spec/cassettes/**": true,
    "storage": true,
    "tmp": true
  },
  "security.workspace.trust.untrustedFiles": "open",
  "standard.autoFixOnSave": true,
  "standard.enable": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.experimental.classRegex": [
    "class:\\s*\"([^\"]*)\""
  ],
  "tailwindCSS.includeLanguages": {
    "erb": "html",
    "ruby": "html"
  },
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 0,
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.surround": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vscode-erb-beautify.keepBlankLines": 1,
  "window.newWindowDimensions": "inherit",
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.iconTheme": "eq-material-theme-icons",
  "workbench.list.defaultFindMode": "filter",
  "workbench.sideBar.location": "right",
  "workbench.tips.enabled": false,
  // *
  // * Long VIM keybindings (at bottom)
  // *
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "=",
        "="
      ],
      "commands": [
        "editor.action.formatDocument"
      ]
    },
    {
      "before": [
        "<leader>",
        "c",
        "p"
      ],
      "after": [
        "y",
        "a",
        "p",
        "P"
      ]
    },
    {
      "before": [
        "<leader>",
        "d"
      ],
      "after": [
        "d",
        "d"
      ]
    },
    {
      "before": [
        "<C-n>"
      ],
      "commands": [
        ":nohl"
      ]
    },
    {
      "before": [
        "<leader>",
        "w"
      ],
      "commands": [
        "workbench.action.files.save"
      ]
    },
    {
      "before": [
        "<leader>",
        "t"
      ],
      "commands": [
        "workbench.action.toggleSidebarVisibility"
      ]
    },
    {
      "before": [
        "<leader>",
        "f"
      ],
      "commands": [
        "revealInExplorer"
      ]
    },
    {
      "before": [
        "<leader>",
        "r",
        "f"
      ],
      "commands": [
        "fileutils.renameFile"
      ]
    },
    {
      "before": [
        "[",
        "<space>"
      ],
      "commands": [
        "editor.action.insertLineBefore",
        "cursorDown"
      ]
    },
    {
      "before": [
        "]",
        "<space>"
      ],
      "commands": [
        "editor.action.insertLineAfter",
        "cursorUp"
      ]
    },
    {
      "before": [
        "[",
        "e"
      ],
      "commands": [
        "editor.action.moveLinesUpAction"
      ]
    },
    {
      "before": [
        "]",
        "e"
      ],
      "commands": [
        "editor.action.moveLinesDownAction"
      ]
    },
    {
      "before": [
        "[",
        "q"
      ],
      "commands": [
        "goToPreviousReference"
      ]
    },
    {
      "before": [
        "]",
        "q"
      ],
      "commands": [
        "goToNextReference"
      ]
    },
    {
      "before": [
        "<leader>",
        "b",
        "o"
      ],
      "commands": [
        "workbench.action.closeOtherEditors"
      ]
    },
    {
      "before": [
        "Y"
      ],
      "after": [
        "y",
        "$"
      ]
    },
    {
      "before": [
        "<leader>",
        "n",
      ],
      "commands": [
        "explorer.openAndPassFocus"
      ]
    }
  ],
  // Unused/Altered settings from "Make VSCode Awesome"
